// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                    String     @id @default(cuid())
  email                 String     @unique
  name                  String?
  surname               String?
  phone                 String?
  password              String
  birthday              DateTime?
  salt                  String
  last_login_ip_address String
  current_logged_in_at  DateTime
  last_logged_in_at     DateTime
  created_at            DateTime   @default(now())
  role                  String
  Messages              Messages[]
  Courses               Courses?   @relation(fields: [coursesId], references: [id])
  coursesId             String?
  Todos                 Todos[]
  Events                Events[]
}

model Subjects {
  id         String   @id @default(cuid())
  name       String?
  created_at DateTime @default(now())
  course     Courses  @relation(fields: [course_id], references: [id])
  course_id  String
}

model Courses {
  id         String     @id @unique @default(cuid())
  name       String?    @unique
  created_at DateTime   @default(now())
  subjects   Subjects[]
  Users      User[]
}

model Messages {
  id         String   @id @default(cuid())
  text       String?
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  from_id    String   @default("0")
}

model Todos {
  id         String   @id @default(cuid())
  text       String?
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  done       Boolean  @default(false)
}

model Events {
  id         String   @id @default(cuid())
  title      String?
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  from_date  DateTime
  to_date    DateTime
  all_day    Boolean  @default(false)
  done       Boolean  @default(false)
}
